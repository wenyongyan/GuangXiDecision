<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#10ffffff" />

            <size 
                android:width="100dp"
                android:height="50dp"/>
            <stroke 
                android:color="@color/title_bg"
                android:width="0.5dp"
                android:dashWidth="2dp"
                android:dashGap="2dp"/>

        </shape>
    </item>

</layer-list>