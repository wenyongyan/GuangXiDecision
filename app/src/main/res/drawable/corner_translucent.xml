<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#30ffffff" />

            <corners
                android:radius="10dp" />
            <size 
                android:width="100dp"
                android:height="100dp"/>
            <stroke 
                android:width="0.5dp"
                android:color="#30000000"/>

        </shape>
    </item>

</layer-list>