<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_top_white"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="获取定位权限"
            android:textColor="@color/black"
            android:textSize="@dimen/level_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="需要获取您的定位权限，否则部分功能无法运行，请开启定位权限"
            android:textColor="@color/text_color4"
            android:textSize="@dimen/level_4" />
    </LinearLayout>

    <TextView
        android:layout_width="240dp"
        android:layout_height="0.5dip"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="40dip"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/llNegative"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/pgy_left_btn"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvNegtive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/level_4" />
        </LinearLayout>

        <TextView
            android:layout_width="0.5dip"
            android:layout_height="40dip"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/llPositive"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/pgy_right_btn"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvPositive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去设置"
                android:textColor="@color/white"
                android:textSize="@dimen/level_4" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>